{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}Praticients{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Adresse</th>
                    <th>CP</th>
                    <th>Ville</th>
                    <th>Notoriété</th>
                </tr>
            </thead>
            {% for practitioner in practitioners %}
                <tr>
                    <td><a href="/practitioners/{{ practitioner.id }}">{{ practitioner.type.name }}</a></td>
                    <td>{{ practitioner.name }}</td>
                    <td>{{ practitioner.first_name }}</td>
                    <td>{{ practitioner.address }}</td>
                    <td>{{ practitioner.zip_code }}</td>
                    <td>{{ practitioner.city }}</td>
                    <td>{{ practitioner.coefficient }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun praticients trouvés.</div>
{% endif %}   
{% endblock %}